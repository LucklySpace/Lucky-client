{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "*"
  ],
  "permissions": [
    "core:app:default",
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-close",
    "core:window:allow-hide",
    "core:window:allow-center",
    "core:window:allow-show",
    "core:window:allow-maximize",
    "core:window:allow-minimize",
    "core:window:allow-destroy",
    "core:window:allow-is-focused",
    "core:window:allow-is-fullscreen",
    "core:window:allow-set-focus",
    "core:window:allow-set-position",
    "core:window:allow-scale-factor",
    "core:window:allow-unminimize",
    "core:window:allow-set-always-on-top",
    "core:window:allow-set-size",
    "core:window:allow-unmaximize",
    "core:window:allow-set-fullscreen",
    "core:window:allow-set-title",
    "core:window:allow-set-min-size",
    "core:window:allow-set-max-size",
    "core:window:allow-set-resizable",
    "core:window:allow-set-closable",
    "core:window:allow-set-minimizable",
    "core:window:allow-set-maximizable",
    "core:window:allow-toggle-maximize",
    "core:window:allow-set-skip-taskbar",
    "core:window:allow-set-content-protected",
    "core:window:allow-set-ignore-cursor-events",
    "core:window:allow-set-decorations",
    "core:window:allow-create",
    "core:webview:default",
    "core:webview:allow-create-webview",
    "core:webview:allow-webview-close",
    "core:webview:allow-create-webview-window",
    "core:webview:allow-set-webview-position",
    "core:webview:allow-internal-toggle-devtools",
    "shell:allow-open",
    "shell:allow-execute",
    "shell:allow-kill",
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    "http:default",
    "http:allow-fetch",
    "http:allow-fetch-cancel",
    "http:allow-fetch-read-body",
    "http:allow-fetch-send",
    "global-shortcut:allow-is-registered",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister",
    "global-shortcut:allow-unregister-all",
    "core:tray:default",
    "core:tray:allow-remove-by-id",
    "core:tray:allow-get-by-id",
    "core:tray:allow-new",
    "core:tray:allow-set-icon",
    "core:tray:allow-set-menu",
    "core:tray:allow-set-title",
    "core:tray:allow-set-tooltip",
    "core:tray:allow-set-visible",
    "store:allow-get",
    "store:allow-set",
    "store:allow-delete",
    "store:allow-clear",
    "store:allow-entries",
    "store:allow-save",
    "store:allow-load",
    "store:allow-has",
    "store:allow-get-store",
    "store:allow-length",
    "store:allow-keys",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "core:image:allow-from-path",
    "core:image:default",
    "core:resources:default",
    "core:menu:default",
    "log:allow-log",
    "log:default",
    "clipboard-manager:default",
    "clipboard-manager:allow-read-image",
    "clipboard-manager:allow-write-image",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:allow-clear",
    "upload:allow-upload",
    "upload:allow-download",
    "upload:default",
    "dialog:allow-message",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:allow-appdata-meta",
    "fs:allow-appdata-read-recursive",
    "fs:allow-appdata-write-recursive",
    "fs:allow-appdata-write",
    "fs:allow-appdata-read",
    "fs:allow-appcache-meta",
    "fs:allow-appcache-read",
    "fs:allow-appcache-write",
    "fs:allow-appcache-read-recursive",
    "fs:allow-appcache-write-recursive",
    "fs:write-all",
    "opener:default",
    "opener:allow-default-urls",
    "opener:allow-open-path",
    "opener:allow-open-url",
    "updater:allow-check",
    "updater:allow-download-and-install",
    "process:allow-restart",
    "process:allow-exit",
    "os:allow-platform",
    "os:allow-hostname",
    "os:allow-version",
    "os:allow-exe-extension",
    "os:allow-locale",
    {
      "identifier": "fs:default",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://**"
        },
        {
          "url": "https://**"
        },
        {
          "url": "http://*:*"
        },
        {
          "url": "https://*:*"
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "bin/ffmpeg",
          "sidecar": true,
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "bin/ffmpeg",
          "sidecar": true,
          "args": true
        },
        {
          "name": "powershell",
          "cmd": "powershell",
          "args": true
        },
        {
          "name": "findPath",
          "cmd": "explorer",
          "args": [
            {
              "validator": "^[\\s\\S]*$"
            }
          ]
        }
      ]
    },
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "**",
          "app": "chrome"
        }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "**"
        }
      ]
    }
  ]
}
